                <p><%= element.description %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>	
      <% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	

	<!-- footer -->
  <%- include('./partials/footer')  %> 
  </body>
</html>
